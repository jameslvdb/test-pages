<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body class="mx-auto min-h-full flex flex-col">
    <header class="flex-shrink-0 bg-gradient-to-br from-blue-800 to-blue-700 shadow-lg">
      <div class="max-w-5xl mx-auto flex flex-wrap justify-between py-6">
        <div>
          <h1 class="text-xl text-white font-bold ml-2">
            <a href="{{ '/' | url }}">{{ metadata.title }}</a>
          </h1>
        </div>

        {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <ul class="flex flex-wrap">
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="{% if entry.url == page.url %} rounded-lg bg-white text-black {% else %} text-white {% endif %} mx-2">
              <a href="{{ entry.url | url }}" class="p-2">{{ entry.title }}</a>
            </li>
          {%- endfor %}
        </ul>
      </div>
    </header>

    <br>

    <main class="w-3/4 max-w-3xl flex-grow self-center pt-8">
      {{ content | safe }}
    </main>

    {% include "footer.njk" %}

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>